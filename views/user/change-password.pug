extends ../layout/admin
block content
    div(class="space-y-10")
        h1(class="text-center text-4xl font-extrabold")= page
        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-600 text-white font-bold text-xs uppercase text-center p-2 mb-1")= error.msg
        div(class="bg-white shadow rounded-lg mx-auto max-w-lg pb-2 px-2 space-y-3")
            form(method="POST" class="p-3 space-y-5")
                input(type="hidden" name="_csrf" value=csrfToken)
                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="name") Current Password:
                    input(type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="password" placeholder="Current Password")
                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="name") New Password:
                    input(type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="newPassword" placeholder="New Password")
                div
                    button(class="bg-green-500 w-full text-white text-sm text-center font-bold uppercase p-2 rounded hover:bg-green-700") Save