extends ../layout/index

block content
    div.py-10
        h1.text-5xl.my-10.font-extrabold.text-center REAL
            span.font-normal ESTATE
        h2.text-center.text-2xl.font-extrabold= page
        
    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto text-center")
        p(class= error ? "bg-red-500" : "bg-green-500").py-2.px-5.rounded-lg.w-full.text-white.font-bold.text-lg= msg
        if !error
            a(href="/auth/login" class="mt-10 block text-sm text-indigo-300 font-bold") Log in