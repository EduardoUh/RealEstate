extends ./layout/app-public

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content
    div(class="space-y-4")
        h1(class="text-center text-4xl font-extrabold") Location in the map
            //- pre= JSON.stringify(property, null, 2)
        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filter Properties:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categories" class="text-sm w-24 upperccase text-gray-500 font bold") Categories
                select(id="categories" class="bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") -- Select --
                    each category in categories
                        option(value=category.id)= category.name
            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="prices" class="text-sm w-24 upperccase text-gray-500 font bold") Categories
                select(id="prices" class="bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") -- Select --
                    each price in prices
                        option(value=price.id)= price.name
        div(id="home-map" class="h-[600px]")
        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold py-10") Houses
            //- pre= JSON.stringify(houses, undefined, 2)
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                each property in houses
                    include ./templates/card
                    
        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold py-10") Apartments
            //- pre= JSON.stringify(houses, undefined, 2)
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                each property in apartments
                    include ./templates/card
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/homeMap.js")
