div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${property.picture}` alt=`Apartment Picture - ${property.title}`)
    div(class="p-5 space-y-4")
        h3(class="text-2xl font-bold")= property.title
        p(class="text-sm text-gray-600") Rooms: 
                        span(class="text-gray-800 font-bold")= property.rooms
        p(class="text-sm text-gray-600") Wc: 
                        span(class="text-gray-800 font-bold")= property.wc
        p(class="text-sm text-gray-600") Price: 
                        span(class="text-gray-800 font-bold")= property.price.name
        a(href=`/property/${property.id}` class="rounded-md mt-2 block bg-indigo-500 p-2 text-white text-center font-bold") See more